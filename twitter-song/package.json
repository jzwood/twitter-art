{
  "name": "twitter-art",
  "version": "1.0.0",
  "description": "Real-time twitter art",
  "author": "JAKE",
  "scripts": {
    "scss": "node_modules/.bin/node-sass --output-style compressed -o assets/stylesheets/css assets/stylesheets/scss",
    "autoprefixer": "postcss -u autoprefixer -r assets/stylesheets/css/*",
    "serve": "browser-sync start --server --files 'assets/stylesheets/css/*.css, assets/javascript/*.js'",
    "build:css": "npm run scss && npm run autoprefixer",
    "watch:css": "onchange 'assets/stylesheets/scss/*.scss' -- npm run build:css",
    "watch:all": "parallelshell 'npm run serve' 'npm run watch:css'",
    "postinstall": "npm run watch:all"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.4",
    "browser-sync": "^2.11.2",
    "imagemin-cli": "^2.1.0",
    "node-sass": "^3.4.2",
    "onchange": "^2.2.0",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.5.1"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "dependencies": {}
}
